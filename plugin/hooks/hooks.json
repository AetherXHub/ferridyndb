{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/memory-retrieval.mjs",
            "timeout": 15,
            "statusMessage": "Recalling memories..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/memory-commit.mjs",
            "timeout": 30,
            "statusMessage": "Saving memories..."
          }
        ]
      }
    ]
  }
}
